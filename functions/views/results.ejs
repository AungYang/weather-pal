<% include partials/header %>




<!-- Introductory header -->
<div class="header">
<h1>Timezone: <%=data["timezone"]%></h1><br>



<p class="intro_text"> Overall: <%= data["currently"]["summary"]%> | Currently: <%= data["currently"]["icon"]%></p> <br>

</div>


<!-- temperature wrap, uv, suggestions -->
<div class="temperature">

<!--sunny or snowflake icon -->
<% if(data.currently.temperature > 69) {%>
<i class="fas fa-sun"></i>

<%} else {%>
<i class="far fa-snowflake"></i>
<%}%>


<!-- uv index, suggestion, and temp -->
<div class="row">
    <div class="col-sm-4">
        <h3 class="uv-info">UV Indexⓘ
            <span class="tooltiptext"> UV index is an international standard measurement of the strength of sunburn-producing
                ultraviolet radiation</span></h3>
       <p class="suggest-uv-text"><%= data["currently"]["uvIndex"]%> </p> 
        

    <% if(data.currently.uvIndex >= 8) {%>
        <button type="button" class="btn btn-danger">Dangerous</button>
    <%} else if(data.currently.uvIndex >= 4){%>
        <button type="button" class="btn btn-warning">Be Cautious</button>
    <%} else {%>
        <button type="button" class="btn btn-success">Safe & Sound</button>
    <%}%>

    </div>

    <div class="col-sm-4">
        <p class="fahrenheit_label"><%= data["currently"]["temperature"]%> °F</p>
    </div>

    <div class="col-sm-4">

        <h3>Helpful Suggestions</h3>
        <% if(data.currently.temperature > 69) {%>
      
            <ul class="suggest-list">
                <li>Stay hydrated</li>
                <li>Wear sunscreen</li>
                <li>Dress lightly</li>
                <li>Put on some shades</li>
            </ul>


        <%} else {%>
            <ul class="suggest-list">
                <li>Wrap yourself in clothes</li>
                <li>Have a warm cup of coffee</li>
                <li>Consider a cardio workout</li>
                <li>Apply lip balm on your lips</li>
            </ul>
        <%}%>
    </div>

</div>

</div>


<div class="other">



<div class="row">
    <div class="col-sm-1"></div>


    <div class="col-sm-5">
        <i class="fas fa-wind"></i>

    <h3 class="wind-h3">Wind Speed & Direction</h3>
       
    <ul class="windandrain-list">
        <li>Wind speed: <b><%= data["currently"]["windSpeed"]%> mph </b></li>
        <li>Wind gust: <b><%= data["currently"]["windGust"]%> mph </b> </li>
        <li>Wind direction: <b><%= data["currently"]["windBearing"]%>° clockwise </b></li>
        <li>Pressure: <b><%= data["currently"]["pressure"]*0.1%> kpa </b></li>
    </ul>
    
     
       
       
      
        
        <!-- The direction that the wind is coming from in degrees, with true north at 0° and progressing clockwise. (If windSpeed is zero, then this value will not be defined.) -->
    


    </div>
    <div class="col-sm-5">
        <i class="fas fa-cloud-rain"></i>
        <h3 class="rain-h3">Precipitation & Humidity</h3>
        <ul class="windandrain-list">

            <li>Precipitation Probability: <b><%= data["currently"]["precipProbability"]*100%>%</li></b>

            
            <li>Relative Humidity: <b><%= data["currently"]["humidity"]%></b></li>
            <li>Dew Point: <b><%= data["currently"]["dewPoint"] %> °F</b></li>
            <li>Cloudage: <b><%= data["currently"]["cloudCover"] %></b></li>
        </ul>



        <!-- Cloud cover (also known as cloudiness, cloudage, or cloud amount) refers to the fraction of the sky obscured by clouds
        when observed from a particular location -->

    </div>

    <div class="col-sm-1"></div>

</div>





</div>




<% include partials/footer %>

