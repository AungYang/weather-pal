<% include partials/header %>

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">WeatherPal <i class="fas fa-cloud-sun-rain"></i> </h1>
            <p class="lead">Find all sorts of information about any weather with <u>only its latitude and longitude!</u></p>
    
        </div>
    </div>

<div class="container">
   

    <form action="/results" method="GET">
      
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="form-group col-sm-6">
                <label for="exampleInputEmail1">Latitude Coordinates in Decimal Degrees(DD)</label>
                <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Enter latitude" name="search">
                <small id="emailHelp" class="form-text text-muted">Please enter south coordinates as negative.</small>
            </div>
            <div class="col-lg-3"></div>

        </div>
    
       <div class="row">
           <div class="col-sm-3"></div>
        <div class="form-group col-md-6">
            <label for="exampleInputEmail1">Longitude Coordinates in Decimal Degrees(DD)</label>
            <input type="text" class="form-control" aria-describedby="emailHelp" placeholder="Enter longitude" name="search2">
            <small id="emailHelp" class="form-text text-muted">Please enter west coordinates as negative.</small>
        </div>
        <div class="col-sm-3"></div>
    </div>

    <div class="row">
        <div class="col-sm-5"></div>

        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary btn-block">Fetch Data</button>
        </div>

        <div class="col-sm-5"></div>
     
    </div>
      

    </form>


</div>




<% include partials/footer %>